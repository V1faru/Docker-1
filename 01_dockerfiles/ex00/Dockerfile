FROM alpine

RUN apk update && \
    apk upgrade && \
    apk add emacs

ENTRYPOINT emacs

#++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++#
# to build:
# docker build -t ex00 .
# to run:
# docker run --rm -ti ex00 
